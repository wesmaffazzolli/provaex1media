<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.com.androidpro.provaex1media.Tela2">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="24dp"
        android:layout_marginTop="20dp"
        android:text="Situação Final"
        android:textAppearance="@android:style/TextAppearance.Large" />

    <TextView
        android:id="@+id/media"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView"
        android:layout_below="@+id/textView"
        android:layout_marginTop="40dp"
        android:text="Média Final:"
        android:textAppearance="@android:style/TextAppearance.Material.Medium" />

    <TextView
        android:id="@+id/mediaFinalTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/media"
        android:layout_alignBottom="@+id/media"
        android:layout_marginStart="18dp"
        android:layout_toEndOf="@+id/media"
        android:textAppearance="@android:style/TextAppearance.Medium"
        tools:text="Valor" />

    <TextView
        android:id="@+id/situacao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/media"
        android:layout_marginTop="19dp"
        android:layout_toStartOf="@+id/mediaFinalTextView"
        android:text="Situação:"
        android:textAppearance="@android:style/TextAppearance.Medium" />

    <TextView
        android:id="@+id/situacaoFinalTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/situacao"
        android:layout_alignStart="@+id/mediaFinalTextView"
        android:textAppearance="@android:style/TextAppearance.Medium"
        tools:text="Condição" />
</RelativeLayout>
